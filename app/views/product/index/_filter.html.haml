.col-xs-6.col-sm-4.sidebar-offcanvas
  .thumbnail
    = form_for ProductFilter.new(filter_params), as: 'product', url: root_path, method: "get", :html => {:class => 'form-signin'} do |f|
      .list-group
        .form-group
          = f.label :manufacturer, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :manufacturer, Manufacturer.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'
        .form-group
          = f.label :body_type, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :body_type, BodyType.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'
        .form-group
          = f.label :drive_type, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :drive_type, DriveType.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'
        .form-group
          = f.label :color_type, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :color_type, ColorType.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'
        .form-group
          = f.label :motor_type, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :motor_type, MotorType.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'
        .form-group
          = f.label :transmission_type, :class => 'control-label', :for => 'inputPassword'
          = f.collection_select :transmission_type, TransmissionType.all, :id, :name, {:prompt => 'Please select..'},
              :class => 'form-control'

        = f.submit "Applay", :class => 'btn btn-lg btn-default btn-block'
