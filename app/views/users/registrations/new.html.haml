- if !resource.errors.empty?
  .container-free
    .alert.alert-danger
      = devise_error_messages!

.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin'}) do |f|
    %h2.form-signin-heading
      Please sign up

    = f.label :email, :class => 'sr-only', :for => 'inputEmail'
    = f.email_field :email, autofocus: true, :id => 'inputEmail',  :class => 'form-control', :placeholder => 'Email address'

    -if  @minimum_password_length
      %em (#{@minimum_password_length} characters minimum)

    = f.label :password, :class => 'sr-only', :for => 'inputPassword'
    = f.email_field :password, :id => 'inputPassword', :class => 'form-control', :placeholder => 'Password'

    = f.label :password_confirmation, :class => 'sr-only', :for => 'inputPassword'
    = f.email_field :password_confirmation, :id => 'inputPassword', :class => 'form-control', :placeholder => 'Password confirmation'

    -if devise_mapping.rememberable?
      .checkbox
        = f.check_box :remember_me
        = f.label :remember_me

    = f.submit "Sign up", :class => 'btn btn-lg btn-primary btn-block'
    = render "users/shared/links"
